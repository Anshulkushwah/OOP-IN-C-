
#include <iostream>

using namespace std;

int main()
{
    //Basic Example 
    int a = 4 ;
    int* ptr = &a;
    
    cout <<"The value of a is " <<*(ptr)<<endl;
    
    //new keyword 
    int *p = new int (40);
    cout << "The value at addresss p is "<< *(p)<<endl;
    
    int *arr = new int [3];
    arr[0] = 10 ;
    arr[1] = 20 ;
    arr[2] = 30 ;
   // delete[] arr;
    cout << "the value at arr[0] is "<< arr[0] << endl;
    
    
    

    return 0;
}
